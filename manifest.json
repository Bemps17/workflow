    },
    {
      "src": "/screenshots/mobile-pomodoro.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Timer Pomodoro"
    }
  ],
  
  "categories": ["productivity", "utilities", "lifestyle"],
  
  "shortcuts": [
    {
      "name": "Nouvelle Tâche",
      "short_name": "Tâche",
      "description": "Créer une nouvelle tâche rapidement",
      "url": "/?action=new-task",
      "icons": [
        {
          "src": "/icons/shortcut-new-task.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Démarrer Pomodoro",
      "short_name": "Pomodoro",
      "description": "Lancer une session de travail",
      "url": "/?action=start-pomodoro",
      "icons": [
        {
          "src": "/icons/shortcut-pomodoro.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Statistiques",
      "short_name": "Stats",
      "description": "Voir vos statistiques de productivité",
      "url": "/?view=stats",
      "icons": [
        {
          "src": "/icons/shortcut-stats.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["text/*", "application/json", ".csv"]
        }
      ]
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+chronorganizer",
      "url": "/?task=%s"
    }
  ],
  
  "related_applications": [],
  "prefer_related_applications": false,
  
  "features": {
    "file_handlers": [
      {
        "action": "/import",
        "accept": {
          "text/csv": [".csv"],
          "application/json": [".json"],
          "text/plain": [".txt", ".md"]
        }
      }
    ],
    
    "launch_handler": {
      "client_mode": "navigate-existing"
    },
    
    "handle_links": "preferred",
    
    "edge_side_panel": {
      "preferred_width": 400
    }
  },
  
  "permissions": [
    "notifications",
    "storage",
    "background-sync"
  ],
  
  "optional_permissions": [
    "geolocation",
    "camera",
    "microphone"
  ],
  
  "display_override": [
    "window-controls-overlay",
    "minimal-ui",
    "standalone",
    "browser"
  ],
  
  "lang": "fr-FR",
  "dir": "ltr",
  
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7"
}