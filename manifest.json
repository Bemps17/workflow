  "screenshots": [
    {
      "src": "/screenshots/desktop-home.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Page d'accueil - Vue Desktop"
    },
    {
      "src": "/screenshots/desktop-tasks.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Gestion des tâches"
    },
    {
      "src": "/screenshots/mobile-home.png",
